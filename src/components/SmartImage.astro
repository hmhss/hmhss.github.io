---
import { Image } from 'astro:assets';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  class?: string;
  [key: string]: any;
}

const { src, alt, class: className, ...rest } = Astro.props;
---

{typeof src === 'string' ? (
  <img src={src} alt={alt} class={className} {...rest} />
) : (
  <Image src={src} alt={alt} class={className} {...rest} />
)}
