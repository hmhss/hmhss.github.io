---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NotificationToast from '../components/NotificationToast.astro';
import { images } from '../data/images';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishDate?: Date;
  author?: string;
  bodyClass?: string;
  mainClass?: string;
}

const { 
  title, 
  description = "Hebron Matriculation Higher Secondary School - Nagercoil, Tamil Nadu. A legacy of excellence in education.", 
  image = images.default_social_image,
  type = 'website',
  publishDate,
  author,
  bodyClass = "bg-gray-50 text-gray-900", 
  mainClass = "" 
} = Astro.props;

const isHome = Astro.url.pathname === '/' || Astro.url.pathname === '';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);

// JSON-LD Schema
const schema = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "image": socialImageURL,
  "datePublished": publishDate?.toISOString(),
  "author": {
    "@type": "Person",
    "name": author || "Hebron MHSS"
  }
} : {
  "@context": "https://schema.org",
  "@type": "EducationalOrganization",
  "name": "Hebron Matriculation Higher Secondary School",
  "url": Astro.site,
  "logo": new URL("/favicon/android-chrome-512x512.png", Astro.site),
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Nagercoil",
    "addressRegion": "Tamil Nadu",
    "addressCountry": "IN"
  },
  "sameAs": [
    "https://facebook.com/hebronmhss",
    "https://instagram.com/hebronmhss"
  ]
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="color-scheme" content="light" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | Hebron MHSS</title>
    <meta name="title" content={`${title} | Hebron MHSS`} />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png?v=1">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png?v=1">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png?v=1">
    <link rel="manifest" href="/favicon/site.webmanifest?v=1">
    <link rel="shortcut icon" href="/favicon.ico?v=1">

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      // @ts-ignore
      if (window.netlifyIdentity) {
        // @ts-ignore
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            // @ts-ignore
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </head>
  <body class:list={["flex flex-col min-h-screen font-sans", bodyClass]}>
    <Header />
    <main class:list={["flex-grow relative", { "pt-12 md:pt-16": !isHome }, mainClass]}>
      <slot />
    </main>
    <Footer />
    <NotificationToast />
  </body>
</html>
