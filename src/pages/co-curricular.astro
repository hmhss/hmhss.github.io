---
import Layout from '../layouts/Layout.astro';
import BackgroundAnimations from '../components/BackgroundAnimations.astro';
import { images } from '../data/images';
import GalleryCarousel from '../components/GalleryCarousel.astro';

// Collect all images for the unified gallery
const allGalleryImages = (images.cocurricular.gallery || []).filter(Boolean);

const majorActivities = [
  {
    title: "Sports & Athletics",
    description: "Physical education is an integral part of our curriculum. We believe that a healthy body houses a healthy mind. Our students are trained by experienced physical directors and compete in various district and state-level tournaments.",
    icon: "M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z", // Globe/Sport
    items: ["Volleyball", "Basketball", "Football", "Athletics", "Kho-Kho", "Kabaddi", "Badminton"]
  },
  {
    title: "Arts & Culture",
    description: "We provide a platform for students to express their creativity and artistic talents. From classical dance to painting, our students are encouraged to explore various art forms, fostering emotional and intellectual growth.",
    icon: "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z", // Image/Art
    items: ["Drawing & Painting", "Dance Club", "Music", "Cultural Events"]
  },
  {
    title: "Service & Social Responsibility",
    description: "Instilling values of community service and environmental stewardship is core to our mission. Through various clubs, students learn the importance of giving back to society and protecting our planet.",
    icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z", // People/Service
    items: ["NSS (National Service Scheme)", "JRC (Junior Red Cross)", "Eco Club", "Road Safety Club"]
  },
  {
    title: "Student Life & Houses",
    description: "Our House system fosters a sense of belonging and healthy competition. Students are divided into four houses, competing in sports, cultural, and academic events throughout the year to win the coveted House Cup.",
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4", // Building/House
    items: ["Ruby House", "Sapphire House", "Emerald House", "Topaz House", "Inter-house Competitions"]
  }
];

const minorActivities = [
  {
    title: "Academic & Skill Clubs",
    description: "Fostering intellectual curiosity and critical thinking beyond textbooks.",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253", // Book
    items: ["Science Club", "Math Club", "Quiz Club", "Debate Club", "Reading Club", "Chess Club"]
  },
  {
    title: "Beyond the Classroom",
    description: "Experiential learning through travel and exploration.",
    icon: "M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z", // Globe
    items: ["Educational Tours", "Field Trips", "Industrial Visits", "Nature Walks"]
  }
];
---

<Layout title="Co-Curricular Activities">
  <BackgroundAnimations variant="co-curricular" />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-left mb-12 max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-burgundy">Beyond Academics</h1>
      <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
        At Hebron MHSS, education extends far beyond the four walls of the classroom. 
        Explore our vibrant community through this gallery of activities designed to nurture every aspect of a child's personality.
      </p>
    </div>

    <!-- Unified Gallery Carousel -->
    <div class="mb-24">
       <GalleryCarousel images={allGalleryImages} id="co-curricular-gallery" />
       {allGalleryImages.length === 0 && (
           <div class="w-full h-64 bg-gray-100 rounded-3xl flex items-center justify-center text-gray-400">
               <p>Gallery images coming soon...</p>
           </div>
       )}
    </div>

    <!-- Content Sections -->
    <div class="space-y-24">
      
      <!-- Major Activities Grid -->
      <div>
        <div class="flex items-center gap-4 mb-12">
           <h2 class="text-3xl font-bold text-burgundy">Core Programs</h2>
           <div class="h-px bg-gold/30 flex-1"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-12">
          {majorActivities.map((activity, index) => (
            <div class="bg-white rounded-3xl p-8 shadow-lg border border-gold/10 hover:shadow-xl transition-shadow relative overflow-hidden group">
               <!-- Decorative Icon Background -->
               <div class="absolute -right-10 -bottom-10 text-burgundy/5 transform rotate-12 group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-64 h-64" fill="currentColor" viewBox="0 0 24 24"><path d={activity.icon}/></svg>
               </div>
               
               <div class="relative z-10">
                 <div class="w-16 h-16 bg-burgundy/10 rounded-2xl flex items-center justify-center mb-6 text-burgundy">
                    <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={activity.icon}/></svg>
                 </div>
                 
                 <h3 class="text-2xl font-bold text-brown mb-4">{activity.title}</h3>
                 <p class="text-gray-600 mb-8 leading-relaxed">
                   {activity.description}
                 </p>
                 
                 <div>
                   <h4 class="font-bold text-sm text-gold uppercase tracking-wider mb-3">Highlights</h4>
                   <div class="flex flex-wrap gap-2">
                     {activity.items.map(item => (
                       <span class="px-3 py-1 bg-cream rounded-lg text-burgundy text-sm font-medium border border-gold/10">
                         {item}
                       </span>
                     ))}
                   </div>
                 </div>
               </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Minor Activities / Clubs -->
      <div>
         <div class="flex items-center gap-4 mb-12">
           <h2 class="text-3xl font-bold text-burgundy">Clubs & Experiences</h2>
           <div class="h-px bg-gold/30 flex-1"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
           {minorActivities.map((activity) => (
             <div class="flex flex-col md:flex-row gap-8 bg-white/50 backdrop-blur-sm p-8 rounded-3xl border border-white shadow-sm hover:bg-white transition-colors">
                <div class="flex-shrink-0">
                   <div class="w-16 h-16 bg-gold/10 rounded-full flex items-center justify-center text-gold">
                      <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={activity.icon}/></svg>
                   </div>
                </div>
                <div>
                   <h3 class="text-xl font-bold text-brown mb-2">{activity.title}</h3>
                   <p class="text-gray-600 mb-4">{activity.description}</p>
                   <div class="flex flex-wrap gap-x-4 gap-y-2">
                      {activity.items.map(item => (
                        <div class="flex items-center gap-2 text-sm text-burgundy font-medium">
                           <div class="w-1.5 h-1.5 rounded-full bg-gold"></div>
                           {item}
                        </div>
                      ))}
                   </div>
                </div>
             </div>
           ))}
        </div>
      </div>

    </div>

    <!-- Call to Action -->
    <div class="mt-24 bg-burgundy rounded-3xl p-10 md:p-16 text-center text-white relative overflow-hidden shadow-2xl">
      <!-- Background Patterns -->
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
              <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#grid)" />
        </svg>
      </div>
      
      <div class="relative z-10 max-w-3xl mx-auto space-y-8">
        <h2 class="text-3xl md:text-5xl font-bold">Encouraging Holistic Growth</h2>
        <p class="text-cream/80 text-xl leading-relaxed">
          We believe every student has a unique talent waiting to be discovered. Join us to explore, create, and excel.
        </p>
      </div>
    </div>

  </div>
</Layout>
