---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
  <div class="text-center py-20">
    <h1 class="text-9xl font-bold text-gray-200 mb-4">404</h1>
    <h2 class="text-3xl font-bold text-gray-900 mb-6">Page Not Found</h2>
    <p class="text-gray-600 mb-8 text-lg">The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</p>
    <a href="/" class="inline-block bg-blue-600 text-white font-bold py-3 px-8 rounded hover:bg-blue-700 transition-colors">
      Go Back Home
    </a>
  </div>
</Layout>
