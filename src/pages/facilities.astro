---
import Layout from '../layouts/Layout.astro';
import BackgroundAnimations from '../components/BackgroundAnimations.astro';
import { images } from '../data/images';
import GalleryCarousel from '../components/GalleryCarousel.astro';

const allGalleryImages = (images.facilities.gallery || []).filter(Boolean);

const facilities = [
  {
    title: "Modern Science Laboratories",
    description: "Equipped with modern apparatus and preserved specimens for hands-on learning in Physics, Chemistry, and Biology.",
    icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" // Flask
  },
  {
    title: "State-of-the-Art Computer Lab",
    description: "Fully equipped with high-speed internet and latest software for digital age readiness.",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" // Monitor
  },
  {
    title: "Extensive Library",
    description: "A knowledge hub with 28,000+ books, journals, and magazines to foster a love for reading.",
    icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" // Book
  },
  {
    title: "Smart Classrooms",
    description: "Interactive learning with smart technology and projectors to make lessons engaging and visual.",
    icon: "M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" // Presentation
  },
  {
    title: "Auditorium & Halls",
    description: "A grand multi-purpose venue for assemblies, cultural events, and major school functions.",
    icon: "M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" // Mic
  },
  {
    title: "Spacious Campus",
    description: "Expansive grounds with greenery that provide freedom for students to explore, play, and grow.",
    icon: "M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" // Sun/Nature (Simplified)
  }
];
---

<Layout title="Facilities">
  <BackgroundAnimations variant="facilities" />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-left mb-12 max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-burgundy">Facilities & Infrastructure</h1>
      <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
        Beyond academics, we provide an environment that nurtures growth. Our infrastructure is designed to inspire, protect, and empower every student.
      </p>
    </div>

    <!-- Unified Gallery Carousel -->
    <div class="mb-24">
       <GalleryCarousel images={allGalleryImages} id="facilities-gallery" />
       {allGalleryImages.length === 0 && (
           <div class="w-full h-64 bg-gray-100 rounded-3xl flex items-center justify-center text-gray-400">
               <p>Gallery images coming soon...</p>
           </div>
       )}
    </div>

    <!-- Content Grid -->
    <div>
        <div class="flex items-center gap-4 mb-12">
           <h2 class="text-3xl font-bold text-burgundy">Our Infrastructure</h2>
           <div class="h-px bg-gold/30 flex-1"></div>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {facilities.map((facility, index) => (
            <div class="bg-white rounded-3xl p-8 shadow-lg border border-gold/10 hover:shadow-xl transition-all hover:-translate-y-1 relative overflow-hidden group">
               <!-- Decorative Icon Background -->
               <div class="absolute -right-8 -bottom-8 text-burgundy/5 transform rotate-12 group-hover:scale-110 transition-transform duration-500">
                  <svg class="w-40 h-40" fill="currentColor" viewBox="0 0 24 24"><path d={facility.icon}/></svg>
               </div>
               
               <div class="relative z-10">
                 <div class="w-14 h-14 bg-burgundy/10 rounded-2xl flex items-center justify-center mb-6 text-burgundy">
                    <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={facility.icon}/></svg>
                 </div>
                 
                 <h3 class="text-xl font-bold text-brown mb-3">{facility.title}</h3>
                 <p class="text-gray-600 leading-relaxed text-sm">
                   {facility.description}
                 </p>
               </div>
            </div>
          ))}
        </div>
    </div>
  </div>
</Layout>
