---
import Layout from '../../../layouts/Layout.astro';
import BackgroundAnimations from '../../../components/BackgroundAnimations.astro';
import { getCollection } from 'astro:content';

const allAlumni = await getCollection('alumni', ({ data }) => {
  return !data.draft;
});
const sortedAlumni = allAlumni.sort((a, b) => b.data.graduationYear - a.data.graduationYear);
---

<Layout title="Alumni Highlights" bodyClass="bg-[#111111] text-gray-200">
  <BackgroundAnimations variant="alumni" />
  <div class="max-w-6xl mx-auto px-4 py-8 relative z-10">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2 text-gold">Alumni Highlights</h1>
      <a href="/alumni" class="text-gray-400 hover:text-white hover:underline transition-colors">&larr; Back to Alumni Home</a>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {sortedAlumni.map((alum) => (
        <div class="bg-white/5 p-6 rounded-lg shadow-md border border-white/10 flex flex-col h-full hover:shadow-xl hover:border-gold/50 transition-all duration-300 backdrop-blur-sm">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-16 h-16 bg-gray-800 rounded-full overflow-hidden flex-shrink-0 border-2 border-gold/30">
              {alum.data.photo ? (
                <img src={alum.data.photo} alt={alum.data.name} class="w-full h-full object-cover" />
              ) : (
                <svg class="w-full h-full text-gray-600 p-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="font-bold text-lg text-white">{alum.data.name}</h3>
              <p class="text-sm text-gold font-medium">Class of {alum.data.graduationYear}</p>
            </div>
          </div>
          <div class="mb-4 flex-grow">
            <p class="text-sm text-gray-400 mb-2">{alum.data.currentRole} {alum.data.location && `â€¢ ${alum.data.location}`}</p>
            <p class="text-gray-300 line-clamp-3">{alum.data.summary}</p>
          </div>
          <a href={`/alumni/highlights/${alum.slug}`} class="text-gold text-sm font-bold hover:text-white hover:underline mt-auto inline-flex items-center">
            Read Full Profile 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>
