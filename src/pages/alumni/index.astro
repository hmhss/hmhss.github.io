---
import Layout from '../../layouts/Layout.astro';
import BackgroundAnimations from '../../components/BackgroundAnimations.astro';
import { getCollection } from 'astro:content';
import featuredConfig from '../../data/featuredAlumni.yml';

const alumni = await getCollection('alumni', ({ data }) => {
  return !data.draft;
});

// Sort by featured list order
const featuredSlugs = featuredConfig.featured || [];
const notableAlumni = featuredSlugs
  .map(slug => alumni.find(a => a.slug === slug))
  .filter(Boolean) // Remove undefined if slug not found
  .slice(0, 6); // Max 6

// If no featured alumni found (or file empty), fallback to first 6
if (notableAlumni.length === 0) {
  notableAlumni.push(...alumni.slice(0, 6));
}
---

<Layout title="Alumni" bodyClass="bg-[#111111] text-gray-200">
  <BackgroundAnimations variant="alumni" />
  <div class="max-w-6xl mx-auto px-4 relative z-10">
    <!-- Hero Section -->
    <div class="text-center mb-16 pt-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gold">Our Alumni</h1>
      <div class="h-1 w-24 bg-white/20 mx-auto mb-8 rounded-full"></div>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Our alumni are the torchbearers of our legacy, excelling in diverse fields across the globe. 
        They carry the values of Hebron wherever they go, making significant contributions to society.
      </p>
    </div>

    <!-- Join Network CTA -->
    <div class="bg-white/5 rounded-3xl p-8 md:p-12 mb-20 border border-gold/20 text-center relative overflow-hidden backdrop-blur-sm">
      <div class="relative z-10">
        <h2 class="text-3xl font-bold text-white mb-4">Stay Connected</h2>
        <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
          Join our network to stay connected, mentor current students, and contribute to the growth of your alma mater.
        </p>
        <a 
        href="https://docs.google.com/forms/d/e/1FAIpQLSdaEfOgxn3b-VaQn27TbussnlcVtEix9AFj_4sIAjudjZA9Vg/viewform" 
        target="_blank"
          class="inline-block bg-gold text-burgundy font-bold px-8 py-4 rounded-full shadow-lg hover:bg-white hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          Join the Alumni Network
        </a>
      </div>
      <!-- Decorative Background Elements -->
      <div class="absolute top-0 left-0 w-32 h-32 bg-gold/10 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-48 h-48 bg-burgundy/20 rounded-full translate-x-1/3 translate-y-1/3"></div>
    </div>

    <!-- Notable Alumni -->
    <div class="mb-24">
      <h2 class="text-3xl font-bold text-gold mb-12 text-center">Notable Alumni</h2>
      
      <div class="grid md:grid-cols-3 gap-8 md:gap-12">
        {notableAlumni.map((person) => (
          <a href={`/alumni/highlights/${person.slug}`} class="group block">
            <div class="relative overflow-hidden rounded-2xl shadow-lg mb-6 aspect-[4/5] border border-white/10">
              <div class="absolute inset-0 bg-black/40 group-hover:bg-transparent transition-colors duration-500 z-10"></div>
              {person.data.photo ? (
                <img 
                  src={person.data.photo} 
                  alt={person.data.name} 
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                />
              ) : (
                <div class="w-full h-full bg-gray-800 flex items-center justify-center">
                  <svg class="w-20 h-20 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
              )}
              
              <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black via-black/80 to-transparent z-20">
                <h3 class="text-xl font-bold text-white mb-1">{person.data.name}</h3>
                <p class="text-gold font-medium text-sm">{person.data.currentRole}</p>
                <p class="text-gray-300 text-xs">{person.data.location}</p>
              </div>
            </div>
          </a>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/alumni/highlights" class="text-gold font-semibold hover:text-white transition-colors inline-flex items-center gap-2">
          View All Alumni Highlights
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>

  </div>
</Layout>
