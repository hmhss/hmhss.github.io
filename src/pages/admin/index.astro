<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Content Manager</title>
  <link rel="stylesheet" href="/admin/admin-style.css">
</head>
<body class="login-page">
  <!-- Include the script that builds the page and powers Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <script>
    // Watch for the Login Button to apply custom styles
    const observer = new MutationObserver(function(mutations) {
      // 1. Check URL hash - if we have a hash like #/collections, we are definitely logged in
      if (window.location.hash && window.location.hash.length > 1) {
        document.body.classList.remove('login-page');
        return;
      }

      // 2. Check for buttons and specific elements
      const buttons = document.querySelectorAll('button, a, span[role="button"]');
      let hasLoginButton = false;
      let hasLogoutButton = false;
      
      buttons.forEach(btn => {
        const text = (btn.innerText || '').toLowerCase();
        if (text.includes('login with github') || text.includes('logging in')) {
          hasLoginButton = true;
        }
        if (text.includes('log out')) {
          hasLogoutButton = true;
        }
      });

      if (hasLoginButton) {
        document.body.classList.add('login-page');
      } else if (hasLogoutButton) {
        document.body.classList.remove('login-page');
      }
    });

    observer.observe(document.body, {
      childList: true,
      subtree: true
    });

    // Also check on hash change
    window.addEventListener('hashchange', () => {
      if (window.location.hash && window.location.hash.length > 1) {
        document.body.classList.remove('login-page');
      }
    });
  </script>
</body>
</html>
